<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView android:id="@+id/title"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textStyle="bold"
              tools:text="Tournament/Ranked Match"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:baselineAligned="false"
                  android:orientation="horizontal"
                  android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/heading_radiant_players"/>
            <TextView
                android:id="@+id/player_blue"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/player_teal"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/player_purple"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/player_yellow"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/player_orange"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/heading_dire_players"/>
            <TextView
                android:id="@+id/player_pink"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/player_gray"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/player_light_blue"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/player_dark_green"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/player_brown"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
